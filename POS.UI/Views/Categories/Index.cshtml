@using POS.Models.EntityModel

@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
         <div class="col-6 text-right">
             <a asp-controller="Categories" asp-action="Create" class="btn-primary btn">
                <i class="fa-solid fa-square-plus"></i> &nbsp; New Category
             </a>
        </div>
    </div>
</div>
<br>
<table class="table table-bordered table-striped" style="width:100%" id="CategoryTbl">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th> 
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>


</table>

@section Scripts{
    <script src="~/js/Category/category.js"> </script>

}