@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2>Create Product</h2>
        </div>
        <div class="col-md-6">
            <p class="text-end">
                <a asp-action="Upsert" asp-controller="Products" class="btn btn-primary btn-sm"> <i class="fa-solid fa-square-plus"></i> &nbsp; Create New Products</a>
            </p>
        </div>
    </div>
    <br />
    <br />
    <table id="productTBL" class="table table-bordered table-striped" style="width:100%">
        <thead class="bg-primary text-light">
            <tr>
            
                <th>Image</th>
                 <th>Code</th>
                <th>Name</th>
               
                <th>Category</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Cost</th>
                <th>Action</th>
            </tr>
        </thead>

    </table>

</div>
@section Scripts
    {
    <script src="~/js/Product/product.js"></script>
}