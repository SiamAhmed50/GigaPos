
@{
    ViewData["Title"] = "Create";
}

<h1>POS Manage</h1>
<div class="p-3">
    <div class="row">
        <div class="col-md-6 ">
            <div class="bg-white p-3">
                <form class="" asp-action="Upsert" method="post">
                    <div class="border mt-4 p-3">

                        <div class="mb-3">
                            @*<span class="input-group-addon"><i class="fa-solid fa-barcode"></i></span>*@ <input type="text" class="form-control" placeholder="Scan Bar Code" />

                        </div>

                        <div class="mb-3">
                            <label></label>
                            <input type="text" placeholder="Start to write product name" class="form-control" />

                        </div>


                        <div class="mb-3">
                            <label></label>
                            <input type="date" class="form-control" />

                        </div>



                        <div class="mb-3">

                            <select class="form-select">
                                <option>Walking Customer</option>
                            </select>

                        </div>


                        <div class="mb-3">
                            <table class="table table-bordered table-striped">
                                <thead class="bg-success">
                                    <tr>
                                        <th>Name</th>
                                        <th>Qunatity</th>
                                        <th>Price</th>
                                        <th>Sub T</th>
                                        <th><a class="text-light" href="#"><i class="fa-solid fa-trash"></i></a></th>
                                    </tr>
                                </thead>

                                <tfoot class="bg-danger">
                                    <tr>
                                        <th colspan="2">Total Qty: <strong id="totalQty">0</strong> </th>
                                        <th colspan="3">Total: <strong id="totalAmount">0</strong> </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>



                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-success" style="width:150px">Payment</button>

                        </div>
                    </div>
                </form>
            </div>
        
    </div>
        <div class="col-md-6">
            <div class="bg-white p-3 ">
                 <div class="row">
                    <div class="col-md-3 ">
                        <div class="pb-2 border-bottom">
                  <h5>Category</h5>
                </div>
                        <div class="category-list mt-3">
                    <ul>
                        <li><a href="#" class="btn btn-primary">Elctronics </a></li>
                                <li><a href="#" class="btn btn-primary">Hardware </a></li>
                                <li><a href="#" class="btn btn-primary">ABCD </a></li>
                        
                    </ul>
                </div>
                
            </div>
                <div class="col-md-9">
                       <div class="pb-2 border-bottom">
                          <h5>Product List</h5>
                        </div>
                        <div class="mt-3">
                            <div class="input-group">
                                <div class="form-outline">
                                    <input type="search" id="form1" class="form-control" />
                                    
                                </div>
                                <button type="button" class="btn btn-success mx-2">
                                   Search
                                </button>
                                <button type="button" class="btn btn-primary">
                                    Reset
                                </button>
                            </div>
                        </div>
                        <div class="selected-product-item mt-1">
                           
                        </div>
                </div>
        </div>
            </div>
       
    </div>
</div>

</div>
